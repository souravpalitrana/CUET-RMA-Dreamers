<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/threeclor_gradient"
    android:orientation="vertical" 
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:background="@drawable/twocolor_gradient"
        android:layout_weight=".10"
        android:weightSum="3" >

         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:padding="5dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
           
                android:text="iMedikit"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <ImageView
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="5dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
          android:weightSum="8"
        android:orientation="vertical" >
        
        
        
        
        
        
        
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="0.8"
        android:weightSum="8"
        >

        <LinearLayout
             android:id="@+id/device"
            android:layout_width="0dp"
            android:layout_height="match_parent" 
            android:layout_weight="4"
            android:weightSum="2"
            android:background="@drawable/unselected"
            >

            

            <TextView
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Device Service"
                android:gravity="center"
            
                android:textStyle="bold"
              android:textAppearance="?android:attr/textAppearanceMedium"  />

        </LinearLayout>
        
        
        
        
       <!--
            tab 2
        -->
        
        
          <LinearLayout
               android:id="@+id/shake"
            android:layout_width="0dp"
            android:layout_height="match_parent" 
            android:layout_weight="4"
            android:weightSum="2"
            android:background="@drawable/unselected"
            
            >

           

            <TextView
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Shake Service"
                android:gravity="center"
               
                android:textStyle="bold"
              android:textAppearance="?android:attr/textAppearanceMedium"  />

        </LinearLayout>
        
        
        
        

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            
             android:layout_weight="7.2"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                          android:weightSum="2"
                          android:layout_marginBottom="10dp"
                          android:layout_marginTop="10dp"
                         >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Service Status"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <ToggleButton
                            android:id="@+id/statusButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                               android:background="@drawable/custom_selector_button"
                            android:text="ToggleButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medium Text"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>