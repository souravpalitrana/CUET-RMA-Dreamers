<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/threeclor_gradient"
    android:orientation="vertical" 
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/twocolor_gradient"
        android:layout_weight=".10"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:padding="5dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
           
                android:text="Easy Dictionary"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <ImageView
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="5dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".90"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trade Name"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                  <TextView
                     
                      android:layout_width="match_parent"
                      android:layout_height="2dp"
                
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                        android:background="#9C9C9C" />
                  
                  
                  
                  
                   <TextView
                      android:id="@+id/generic_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:padding="5dp"
                      android:text="Medium Text"
                          android:background="#40A1B9C7"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="#FFFFFF" />
                  
                  
                  
                  
                   
                   
                   
                   
                   
                     <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                     android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                  <TextView
                     
                      android:layout_width="match_parent"
                      android:layout_height="2dp"
                
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                        android:background="#9C9C9C" />
                  
                  
                  
                  
                   <TextView
                      android:id="@+id/brand_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                          android:background="#40A1B9C7"
                      android:textColor="#FFFFFF" />
                   
                   
                   
                     <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                     android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                  <TextView
                     
                      android:layout_width="match_parent"
                      android:layout_height="2dp"
                
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                        android:background="#9C9C9C" />
                  
                  
                  
                  
                   <TextView
                      android:id="@+id/description"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                          android:background="#40A1B9C7"
                      android:textColor="#FFFFFF" />
                  

                   
                   
                   
                     <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dose Information"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                     android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                  <TextView
                     
                      android:layout_width="match_parent"
                      android:layout_height="2dp"
                
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                        android:background="#9C9C9C" />
                  
                  
                  
                  
                   <TextView
                      android:id="@+id/dose"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:padding="5dp"
                      android:text="Medium Text"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                          android:background="#40A1B9C7"
                      android:textColor="#FFFFFF" />
                   
                   
                   
                   
                   
            </LinearLayout>
        </ScrollView>
        

      

    </LinearLayout>
        
    </LinearLayout>

